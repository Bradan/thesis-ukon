\newcounter{chapters}
\newcounter{loops}

\def\Chapters{
	\setcounter{chapters}{1}
	\setcounter{loops}{0}
	\whiledo {\value{loops} < 1}%
	{
		\IfFileExists{Chapter\thechapters/chapter.tex}
		{\Chapter\thechapters}
		{\IfFileExists{Chapter\thechapters/chapter\thechapters.tex}
		{\ChapterS\thechapters}
		{\setcounter{loops}{1}}}
		\stepcounter{chapters}
	}
}
